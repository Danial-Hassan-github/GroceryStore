@{
    ViewBag.Title = "Navbar";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/bootstrap-5.0.2-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/fontawesome-free-6.2.1-web/css/all.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

</head>
<body>
    @*@RenderPage("~/Views/Home/About.cshtml")*@
    <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-light" style="color: white; background-color: #ffebcdb5 ">
        <div class="container-fluid text-white">
            @Html.ActionLink("Application name", "#", "#", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarSupportedContent" >
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Products", "Products", "Products", null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, htmlAttributes: new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav" style="">
                    <li class="nav-item">@Html.ActionLink("Orders", "Orders", "Orders", null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Cart", "LoadCart", "Cart", null, htmlAttributes: new { @class = "nav-link" })</li>
                    @{
                        var user= (Grocery_Store.Models.SignupEntity)Session["user"];
                        }
                <li class="nav-item">@Html.ActionLink(user.Name, "Products", "Products", null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Logout", "Logout", "User", null, htmlAttributes: new { @class = "nav-link" })</li>
                </ul>
            </div>
            @*<form class="form-inline">
                    <div class="col-12 m-0 input-group">
                        <input class="form-control col-9" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light btn-dark col-3" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
            </form>*@
        </div>       
    </nav>
</body>
</html>
